generator client {
  provider = "prisma-client-js"
}

//O uso do sqlite se deve a praticidade em nao precisar instalar nada na maquina o bd fica na memoria da aplica√ßao 
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//Tabela cadastro usuario
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String   @unique
  city      String
  isActive  Boolean  @default(true)
  role      Int      @default(1)
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  avatar    String?
  @@map("users")
}